<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reaper.UIHarvester.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/infoText"
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:background="#121416"
        android:text="Select the apps you want to use with UIHarvester"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032"
        tools:textSize="17sp"></TextView>

    <CheckBox
        android:id="@+id/outputbase64"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:buttonTintMode="multiply"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:text="Logcat output: Base64"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@color/colorPrimaryDark"
        tools:buttonTint="@android:color/holo_blue_dark" />

    <CheckBox
        android:id="@+id/outputplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:buttonTintMode="multiply"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:text="Logcat output: Plain"
        android:textColor="@android:color/background_dark"
        android:textColorLink="@color/colorPrimaryDark"
        tools:buttonTint="@android:color/holo_blue_dark" />

    <ListView
        android:id="@+id/checkable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="79dp">

    </ListView>
</LinearLayout>
